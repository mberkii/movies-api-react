{
    "env": {
		"browser": true,
		"es2021": true
    },
	"settings": {
		"react": {
		  "version": "detect"
		}
	},
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react-hooks/recommended"],
	"globals": {
		"jest": "readonly",
		"expect": "readonly",
		"test": "readonly",
		"global": "readonly",
		"require": "readonly"
	},
    "parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
    },
    "plugins": ["react", "react-hooks"],
    "rules": {
		"no-unused-vars": "error"
    }
}
